<div class="row wed-bp-list">
	
	
	<% @metrics.each do |metric| %>
		<div class="col-md-3 wed-bp-list">
			<div class="metric">
				<table>
					<thead>
						<tr>
							<th colspan="3" class="title"><%= metric.number %>. <%= metric.name %></th>
						</tr>
						<tr>
							<th class="rank">Rank</th>
							<th class="score">Score</th>
							<th colspan="2">Company</th>
						</tr>
					</thead>
					<tbody>
						<% @companies.each do |company| %>
							<tr>
								<td>3</td>
								<td>10</td>
								<td>
									<%= image_tag(company.icon.url(:normal)) %>
									<%= link_to company.name, company_profile_path(company) %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	<% end %>
	

	<button class="btn btn-primary" data-toggle="modal" data-target="#viewReport">
	  Launch demo modal
	</button>

	<%= render "shared/report_popup" %>
</div>