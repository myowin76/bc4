<% page_title @page_title %>
<% page_lead @page_lead %>

<div class="well">
	<section>

		<div class="ddl-download">
      <select class="form-control">
          <option>Format</option>
          <option>Pdf</option>
          <option>CSV</option>
      </select>
      <a href="#" class="btn btn-download"><i></i>Download</a>
    </div>
    
	</section>
</div>

<div class="well legend">
  <div class="row">
    <div class="col-sm-3">No previous report data available</div>
    <div class="col-sm-3">No change from last report</div>
    <div class="col-sm-3">Score has increased since last report</div>
    <div class="col-sm-3">Score has decreased since last report</div>
  </div>
</div>


<table class="table tbl-peer-comparison">
  <thead>
    <tr>
    	<% Admin::Metric.roots.order(:number).each do |metric| %>
    		<th><%= metric.name %></th>
    	<% end %>
    	<th>Total</th>
    </tr>
  </thead>
  <tbody>
    <!-- to do with list, not table -->
      <% Admin::Metric.roots.order(:number).each do |metric| %>
        <tr>
        	<% @my_peers.each do |my_peer| %> <!-- order by metrics -->
    				<td>
              <%= link_to image_tag(my_peer.icon.url(:normal)), my_peer.url, :target => "_blank" %>
            </td>
          <% end %>
        </tr>    
      <% end %>
  </tbody>
</table>