<% content_for :sub_menu do %>
  <%= render "admin/shared/projects_sub_menu" %>
<% end %>

<div class="page-header">
  <h1>Report Tags</h1>
  <%= link_to new_admin_report_tag_path, :class => 'btn-new' do %>
    <i></i>New Report Tag
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_report_tags.each do |admin_report_tag| %>
      <tr>
        <td><%= link_to admin_report_tag.name, admin_report_tag %></td>
        <td><%= link_to 'Edit', edit_admin_report_tag_path(admin_report_tag), :class => 'link_edit' %></td>
        <td><%= link_to 'Destroy', admin_report_tag, :class => 'link_destroy',
            method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


