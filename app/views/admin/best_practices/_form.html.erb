<% content_for :sub_menu do %>
  <%= render "admin/shared/projects_sub_menu" %>
<% end %>

<%= simple_form_for @best_practice, :html => { :multipart => true }  do |f| %>
  <%= f.error_notification %>
  <article>
    <section>

      <fieldset>
        <%= f.input :name %>
      </fieldset>
      <fieldset>
        <%= f.input :body %>
      </fieldset>
      <fieldset>
        <label>Company</label>
        <div class="col-sm-3">
          <%= f.association :company, :label => false %>
        </div>
        <div class="col-sm-3">
          <%= f.input :company_name, :label => false %>
        </div>
      </fieldset>
      
      <%= f.fields_for :screengrabs, @screengrabs do |screengrab_fields| %>

        <% unless screengrab_fields.object.new_record? %>
        	<fieldset>
        		<%= screengrab_fields.file_field :image %>
        	</fieldset>

        	<fieldset>
      	    <%= screengrab_fields.input :caption %>
      	  </fieldset>
        <% else %>
          
        <% end %>
      <% end %>
    </section>
  </article>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-save pull-right' %>
  </div>
  
<% end %>