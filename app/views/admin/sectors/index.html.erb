<% content_for :sub_menu do %>
  <%= render "admin/shared/companies_sub_menu" %>
<% end %>

<div class="page-header">
  <h1>Sectors</h1>
</div>

<div class="well">
  <section>
    <%= link_to new_admin_sector_path, :class => "btn btn-new pull-right" do %>
      <i></i>New Sector
    <% end %>
  </section>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sectors.each do |sector| %>
      <tr>
        <td><%= link_to sector.name, sector %></td>
        <td><%= link_to 'Edit', edit_admin_sector_path(sector), :class => 'link_edit' %></td>
        <td><%= link_to 'Destroy', sector, 
              :class => 'link_destroy', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>