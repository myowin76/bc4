<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/wed/meta_head' %>
  <%= stylesheet_link_tag "global", "wed", "http://fonts.googleapis.com/css?family=EB+Garamond", media: "all" %>  
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		
		<%= render 'layouts/wed/header' %>	
		<!-- page header -->
		<% if content_for(:page_header) %>	
			<%= yield :page_header %>
		<% else %>
			<div class="page-header">
				<h1><%= @page_title || "Page Title" %></h1>
				<% unless @page_lead.blank? %>
		    	<p class="lead"><%= @page_lead %></p>
		    <% end %>
		  </div>
		<% end %>	

		<!-- content -->
		<%= yield %>
		<%= render 'layouts/wed/footer' %>
	</div>	

	<%= javascript_include_tag "application", "wed" %>
	<%= yield :scripts %>
	
</body>
</html>
