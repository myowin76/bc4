<header>
  <div class="navbar" role="top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" 
        	data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        
        <%= link_to root_path, :class => "navbar-brand" do %>
          <img src="/assets/logo.png" alt="logo" height="50"/>
        <% end %>
      </div>
      
      <ul class="nav navbar-nav pull-right">
        <li><%= link_to "Subscribe to newsletter", page_path('subscribe') %></li>
        <li><%= link_to "Contact us", page_path('contact-us') %></li>
        <li>
          <%= link_to "WED", wed_dashboard_path %>
        </li>
        <li>
          <form class="navbar-form navbar-right">
          <div class="form-group">
            <input type="text" placeholder="Search" class="form-control">
            <input type="submit" class="search" />
          </div>
          
        </form>
        </li>
      </ul>
    </div>
  </div>

  <nav class="main-nav web" role="main">
    <ul id="main-navigation">
      <% Web::Page.not_home.nav_items.roots.order(:position).each do |page| %>
        <% if @web_page.url == page.url || @web_page.root.url == page.url %>
          <li class= "active <%= page.url %>">
            <%=link_to h(page.name), page_path(page.url) %> <!--  class: ("active" if page.root == page) -->
          </li>
        <% else %>
          <li class= <%= page.url %>>
            <%=link_to h(page.name), page_path(page.url) %>
          </li>
        <% end %>
      <% end %>
    </ul>

    <%= yield :sub_menu %> 
  </nav>
</header>