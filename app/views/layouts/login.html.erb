<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/wed/meta_head' %>
  <%= stylesheet_link_tag "global", "login", media: "all" %>  
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container login">
		
		<%= render 'layouts/wed/login_header' %>	
		<div class="login-form">
			<% if content_for(:page_header) %>	
				<%= yield :page_header %>
			<% else %>
				<div class="page-header">
					<h1><%= @page_title || "Page Title" %></h1>
					<% unless @page_lead.blank? %>
			    	<p class="lead"><%=h simple_format @page_lead.html_safe %></p>
			    <% end %>
			  </div>
			<% end %>	

			<%= yield %>

			<%=h simple_format @page_body %>
		</div>
		

		

	</div>	
	<%#= javascript_include_tag "application" %>
	<%= yield :scripts %>
	
</body>
</html>
