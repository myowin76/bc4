<%= simple_form_for(@web_widget) do |f| %>
  <%= f.error_notification %>
  
  <article>
    <section>
      <fieldset>
        <%= f.input :name %>
      </fieldset>
      <fieldset>
        <%= f.input :theme, collection:  Web::Widget::THEMES, 
          :input_html => {:class => 'form-control'}, :prompt => 'Choose Theme' %>
      </fieldset>
      <fieldset>
        <%= f.label 'Body' %>
      </fieldset>
      <fieldset>
        <%= f.input :body, :label => false %>
      </fieldset>
    </section>
  </article>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-save pull-right' %>
  </div>
<% end %>

<% content_for :scripts do %>
  <script type="text/javascript">
		CKEDITOR.replace( 'web_widget_body' );
	</script>  
<% end %>